<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXRadioButton?>
<?import java.net.URL?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="navigation-bar-content" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.manyfaces.ui.controllers.HomeMenuController">
   <children>
      <ImageView fitHeight="139.0" fitWidth="242.0" pickOnBounds="true" styleClass="home-logo" />
      <VBox spacing="15.0" styleClass="menu-pane">
         <children>
            <JFXRadioButton fx:id="homeToggle" styleClass="menu-toggle-node" text="Home">
               <toggleGroup>
                  <ToggleGroup fx:id="menuGroup" />
               </toggleGroup>
            </JFXRadioButton>
            <JFXRadioButton fx:id="newProfileToggle" disable="true" styleClass="menu-toggle-node" text="New browser profile" toggleGroup="$menuGroup" />
            <JFXRadioButton fx:id="accountToggle" styleClass="menu-toggle-node" text="My account" toggleGroup="$menuGroup" />
            <JFXRadioButton fx:id="pluginsToggle" styleClass="menu-toggle-node" text="Plugins" toggleGroup="$menuGroup" />
            <JFXRadioButton fx:id="helpToggle" styleClass="menu-toggle-node" text="Help &amp; Support" toggleGroup="$menuGroup" />
         </children>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@../styles/roboto-fonts.css" />
      <URL value="@../styles/home-menu.css" />
      <URL value="@../styles/navigation-bar.css" />
   </stylesheets>
</VBox>
