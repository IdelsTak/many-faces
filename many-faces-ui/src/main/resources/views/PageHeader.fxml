    <left>
        <Text fx:id="headerText" strokeType="OUTSIDE" strokeWidth="0.0" text="Plugins" BorderPane.alignment="CENTER" />
    </left>
    <right>
        <JFXToggleNode fx:id="notificationToggle" BorderPane.alignment="CENTER">
            <graphic>
                <FontIcon fx:id="icon" iconLiteral="mdi-bell" styleClass="icon" />
            </graphic>
        </JFXToggleNode>
    </right>
